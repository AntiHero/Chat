{
  "name": "chat",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "typecheck": "",
    "build": "rimraf \"packages/*/{dist,tsconfig.tsbuildinfo}\" --glob && tsc -b",
    "server:dev": "yarn workspace @monorepo/server run start:dev",
    "lint": "eslint \"packages/{src,apps,libs,test}/**/*.ts\" --fix",
    "postinstall": "husky install"
  },
  "repository": "git@github.com:AntiHero/Chat.git",
  "workspaces": [
    "packages/*"
  ],
  "author": "Aleksandr Schemelev <prophreaker@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --cache"
    ],
    "*.(ts|md|json)": [
      "prettier --write --cache"
    ]
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  }
}
